<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ToolBarTheme" parent="Theme.AppCompat.Dialog" >
        <item name="android:colorBackground">@color/cyan</item>
        <item name="android:textColor">@color/toolbarBackground</item>
    </style>

    <style name="DatePickerItemStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:background">@drawable/bg_picker_item</item>
        <item name="android:drawableTop">@drawable/up_normal</item>
        <item name="android:drawableBottom">@drawable/down_normal</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

</resources>
